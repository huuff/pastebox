{{ define "title" }}Paste #{{.ID}}{{end}}

{{ define "main"}}
    <div class="paste">
      <div class="metadata">
        <strong>{{.Title}}</strong>
        <span>#{{.ID}}</span>
      </div>
      <pre>
        <code>
          {{ .Content }}
        </code>
      </pre>

      <div class="metadata">
        <time>Created: {{ .Created }}</time>
        <time>Expires: {{ .Expires }}</time>
      </div>
    </div>
{{ end }}
